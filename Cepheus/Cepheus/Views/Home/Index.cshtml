@model Cepheus.Models.HomeModel
<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">Cepheus Web API</a></p>
        </div>
    </div>
</header>
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Bem vindo ao Cepheus Web API</h1>
            </hgroup>
            <p>
                Cadastro:
            </p>
            <div>
                @Html.BeginForm("Index","Home")
                {
                    Nome do usuário:<br />
                    @Html.TextBoxFor(m => m.User)
                    <br />
                    Senha:<br />
                    @Html.PasswordFor(m => m.Password)
                    <br />
                    <button type="submit" value="Enviar" >Enviar</button>
                }
            </div>
        </div>
    </section>
</div>
